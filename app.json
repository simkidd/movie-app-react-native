{
  "expo": {
    "name": "movie-app",
    "slug": "movie-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/logo-icon-removebg-preview.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/logo-icon-removebg-preview.png",
        "backgroundColor": "#0f0f0f"
      },
      "package": "com.netreelz"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/logo-icon-removebg-preview.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/highlight.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f0f0f"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
